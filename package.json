{
  "name": "cryptoconnect",
  "version": "1.0.0",
  "description": "A blockchain-based platform for buying, selling, and trading cryptocurrencies securely",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-server": "cd backend && npm install",
    "install-client": "cd frontend && npm install",
    "install-all": "npm run install-server && npm run install-client"
  },
  "keywords": [
    "cryptocurrency",
    "blockchain",
    "trading",
    "wallet",
    "ethereum",
    "bitcoin"
  ],
  "author": "CryptoConnect Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
